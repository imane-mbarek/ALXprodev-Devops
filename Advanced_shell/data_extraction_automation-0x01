#!/bin/bash

# Extraire les infos depuis data.json avec jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Met la première lettre en majuscule
height=$(jq '.height' data.json)
weight=$(jq '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Convertir unités (décimètres → mètres, hectogrammes → kg)
height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
weight_kg=$(awk "BEGIN {printf \"%.0f\", $weight / 10}")

# Affichage final
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."

